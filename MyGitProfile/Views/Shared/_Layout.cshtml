<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Devicon icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

    <style>
        /* white in light mode */
        body[data-bs-theme="light"] .card {
            background-color: #ffffff;
            color: #212529;
        }

        /* dark grey in dark mode */
        body[data-bs-theme="dark"] .card {
            background-color: #1e1e1e;
            color: #f1f1f1;
        }

        /* card mode */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }


        /* .card:hover {
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        } */


        body[data-bs-theme="light"] {
            background-color: #f5f5f5;
        }

        .card h4, .card h5 {
            font-weight: 600;
        }

        .list-group-item {
            background-color: transparent;
            border: none;
            padding-left: 0;
            padding-right: 0;
        }

    </style>
    

</head>
<body data-bs-theme="light">
    <!-- menu -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
        <div class="container">
            <a class="navbar-brand" href="/">My GitHub Profile</a>
            <button class="btn btn-outline-secondary btn-sm ms-auto" onclick="toggleTheme()">Mode</button>
        </div>
    </nav>

    <!-- main -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- foot -->
    <footer class="text-center py-4 border-top text-muted">
        &copy; @DateTime.Now.Year — Built with ASP.NET Core MVC
    </footer>

    @RenderSection("Scripts", required: false)

    <script>
        function toggleTheme() {
            const body = document.body;
            const current = body.getAttribute("data-bs-theme");
            body.setAttribute("data-bs-theme", current === "dark" ? "light" : "dark");
        }
    </script>
</body>
</html>
